{
    "compilerOptions": {
        "outDir": "dist/app",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "system",
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": false,
        "noImplicitAny": true
    },
    "filesGlob": [
        "demo/**/*.ts",
        "typings/**/*.d.ts",
        "node_modules/immutable/dist/*.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}